#!/command/with-contenv bash
# Fix permissions on /etc/sudoers.d directory and files

echo "[permissions] Fixing sudoers.d permissions"

# /etc/sudoers.d - directory should be 750, files should be 440
if [ -d /etc/sudoers.d ]; then
  chmod 750 /etc/sudoers.d
  chown root:root /etc/sudoers.d
  find /etc/sudoers.d -type f -exec chmod 440 {} \;
  find /etc/sudoers.d -type f -exec chown root:root {} \;
fi
