#!/command/with-contenv bash
# Fix permissions on /etc/ssh directories

echo "[permissions] Fixing SSH directory permissions"

# /etc/ssh and /etc/ssh/sshd_config.d - directories should be 755
if [ -d /etc/ssh ]; then
  chmod 755 /etc/ssh
  chown root:root /etc/ssh
  if [ -d /etc/ssh/sshd_config.d ]; then
    chmod 755 /etc/ssh/sshd_config.d
    chown root:root /etc/ssh/sshd_config.d
  fi
fi
